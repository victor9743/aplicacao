<p id="notice"><%= notice %></p>

<h1>Recibos</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recibos.each do |recibo| %>
      <tr>
        <td><%= recibo.descricao %></td>
        <td><%= recibo.image_data %></td>
        <td><%= link_to 'Show', recibo %></td>
        <td><%= link_to 'Edit', edit_recibo_path(recibo) %></td>
        <td><%= link_to 'Destroy', recibo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recibo', new_recibo_path %>
